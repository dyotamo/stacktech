<div class="row">
  <div class="col-md-6 col-md-offset-3 well" style="border-radius: 0;">
    <%= form_for(programming_languages_user, url: url, method: :post) do |f| %>
      <%= render "shared/error_messages", model: programming_languages_user %>
      <% if url == new_language_path %>
        <div class="field form-group">
          <%= f.label :programming_language_id %>
          <%= f.select :programming_language_id, ProgrammingLanguage.all.collect {|p| [ p.name, p.id ] }, { include_blank: false}, {class: "form-control"} %>
        </div>
      <% end %>
      <div class="field form-group">
        <%= f.label :details %>
        <%= f.text_area :details, class: "form-control", placeholder: "For what you guys use this tool!" %>
      </div>
      <div class="field form-group">
        <% if url == new_language_path %>
          <%= f.submit "Add Language", class: "btn btn-primary" %>
        <% else %>
          <%= f.submit "Update #{programming_languages_user.programming_language.name}", class: "btn btn-primary" %>
          <%= link_to "Remove #{programming_languages_user.programming_language.name}", delete_language_path(id: programming_languages_user.programming_language), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
