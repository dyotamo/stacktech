<h2>My Current Stack</h1>
<div class="row">
  <div class="col-md-3">
    <h4>Programming Languages <small>(<%= @programming_languages.count %>)</small></h4>
    <ul>
      <% @programming_languages.each do |tool| %>
        <li><%= tool.name %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-3">
    <h4>Utilities <small>(<%= @utilities.count %>)</small></h4>
    <ul>
      <% @utilities.each do |tool| %>
        <li><%= tool.name %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-3">
    <h4>Devops <small>(<%= @devops.count %>)</small></h4>
    <ul>
      <% @devops.each do |tool| %>
        <li><%= tool.name %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-3">
    <h4>Business Tools <small>(<%= @business_tools.count %>)</small></h4>
    <ul>
      <% @business_tools.each do |tool| %>
        <li><%= tool.name %></li>
      <% end %>
    </ul>
  </div>
</div>
<hr/>
<h2>Update Stack</h1>
<%= form_for(:mystack, url: mystack_path, html: { method: :put }) do |f| %>
  <div class="row form-group">
    <div class="col-md-3">
      <%= f.label :language %>
      <%= f.select :language , ProgrammingLanguage.all.collect {|t| [ t.name, t.id ] }, {include_blank: false}, {multiple: true, class: "form-control", size: 10} %>
    </div>
    <div class="col-md-3">
      <%= f.label :utilities %>
      <%= f.select :utilities , Utility.all.collect {|t| [ t.name, t.id ] }, {include_blank: false}, {multiple: true, class: "form-control", size: 10} %>
    </div>
    <div class="col-md-3">
      <%= f.label :devops %>
      <%= f.select :devops , Devop.all.collect {|t| [ t.name, t.id ] }, {include_blank: false}, {multiple: true, class: "form-control", size: 10} %>
    </div>
    <div class="col-md-3">
      <%= f.label :business_tools %>
      <%= f.select :business_tools , BusinessTool.all.collect {|t| [ t.name, t.id ] }, {include_blank: false}, {multiple: true, class: "form-control", size: 10} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Update Stack", class: "btn btn-primary" %>
  </div>
<% end %>
