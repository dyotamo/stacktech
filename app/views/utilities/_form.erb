<div class="row">
  <div class="col-md-6 col-md-offset-3 well" style="border-radius: 0;">
    <%= form_for(users_utility, url: url, method: :post) do |f| %>
      <%= render "shared/error_messages", model: users_utility %>
      <% if url == new_utility_path %>
        <div class="field form-group">
          <%= f.label :utility_id %>
          <%= f.select :utility_id, Utility.all.collect {|u| [ u.name, u.id ] }, { include_blank: false}, {class: "form-control"} %>
        </div>
      <% end %>
      <div class="field form-group">
        <%= f.label :details %>
        <%= f.text_area :details, class: "form-control", placeholder: "For what you guys use this tool!" %>
      </div>
      <div class="field form-group">
        <% if url == new_utility_path %>
          <%= f.submit "Add Utility", class: "btn btn-primary" %>
        <% else %>
          <%= f.submit "Update #{users_utility.utility.name}", class: "btn btn-primary" %>
          <%= link_to "Remove #{users_utility.utility.name}", delete_utility_path(id: users_utility.utility), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
